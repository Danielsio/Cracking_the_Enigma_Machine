<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.common.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>CipherTextServlet</servlet-name>
        <servlet-class>servlets.uboat.CipherTextServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CipherTextServlet</servlet-name>
        <url-pattern>/cipher</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>CodeCalibrationManualServlet</servlet-name>
        <servlet-class>servlets.uboat.CodeCalibrationManualServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CodeCalibrationManualServlet</servlet-name>
        <url-pattern>/calibrate/manual</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>CodeCalibrationAutoServlet</servlet-name>
        <servlet-class>servlets.uboat.CodeCalibrationAutoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CodeCalibrationAutoServlet</servlet-name>
        <url-pattern>/calibrate/auto</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>FetchAlliesInfoServlet</servlet-name>
        <servlet-class>servlets.uboat.FetchAlliesInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FetchAlliesInfoServlet</servlet-name>
        <url-pattern>/fetch/allies-info</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ClientIsReadyServlet</servlet-name>
        <servlet-class>servlets.common.ClientIsReadyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClientIsReadyServlet</servlet-name>
        <url-pattern>/ready</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>FetchCandidatesServlet</servlet-name>
        <servlet-class>servlets.common.FetchCandidatesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FetchCandidatesServlet</servlet-name>
        <url-pattern>/fetch/candidates</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>SubscribeToBattlefieldServlet</servlet-name>
        <servlet-class>servlets.allies.SubscribeToBattlefieldServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubscribeToBattlefieldServlet</servlet-name>
        <url-pattern>/subscribe</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>FetchBattlefieldsInfoServlet</servlet-name>
        <servlet-class>servlets.allies.FetchBattlefieldsInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FetchBattlefieldsInfoServlet</servlet-name>
        <url-pattern>/fetch/battlefields</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>FetchLoggedAgentsInfoServlet</servlet-name>
        <servlet-class>servlets.allies.FetchLoggedAgentsInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FetchLoggedAgentsInfoServlet</servlet-name>
        <url-pattern>/fetch/agents</url-pattern>
    </servlet-mapping>


</web-app>