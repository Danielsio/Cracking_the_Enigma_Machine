<GridPane minHeight="150.0" prefHeight="300.0" prefWidth="550.0" styleClass="component-with-border" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="body.screen2.encrypt.EncryptDecryptController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="200.0" prefWidth="370.0" />
      <ColumnConstraints hgrow="ALWAYS" maxWidth="50.0" minWidth="0.0" prefWidth="5.0" />
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="70.0" prefWidth="70.0" />
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="70.0" prefWidth="80.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="NEVER" />
      <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="40.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="1.7976931348623157E308" minHeight="25.0" prefHeight="25.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="40.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="1.7976931348623157E308" minHeight="5.0" prefHeight="5.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="1.7976931348623157E308" minHeight="50.0" prefHeight="100.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <Label styleClass="component-title" text="Cipher Text:" GridPane.rowIndex="1" />
      <ScrollPane fitToHeight="true" fitToWidth="true" GridPane.columnSpan="4" GridPane.rowIndex="8">
         <content>
            <FlowPane fx:id="lightBulbs" alignment="TOP_CENTER" minHeight="93.0" minWidth="400.0" prefHeight="93.0" prefWidth="547.0" styleClass="lightbulbs-area" />
         </content>
      </ScrollPane>
      <Label fx:id="cipherProblemLabel" styleClass="error-label" text="error" GridPane.rowIndex="4" GridPane.valignment="TOP">
         <GridPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </GridPane.margin>
      </Label>
      <TextField fx:id="inputTextField" maxWidth="1.7976931348623157E308" minHeight="40.0" onKeyReleased="#deactivateLightBulb" onKeyTyped="#cipherCharacter" prefHeight="40.0" prefWidth="268.0" styleClass="input-text-field" GridPane.rowIndex="3" GridPane.valignment="TOP" />
      <Label prefHeight="17.0" prefWidth="76.0" text="Ciphered Text:" GridPane.rowIndex="5" GridPane.valignment="BOTTOM" />
      <Label text="Enter Text:" GridPane.rowIndex="2" GridPane.valignment="BOTTOM" />
      <ScrollPane maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="40.0" prefHeight="40.0" prefWidth="268.0" GridPane.rowIndex="6" GridPane.valignment="TOP">
         <content>
            <Label fx:id="outputLabel">
               <font>
                  <Font size="15.0" />
               </font>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </Label>
         </content>
      </ScrollPane>

      <Button fx:id="processButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="25.0" minWidth="80.0" mnemonicParsing="false" onMouseClicked="#processHandler" prefHeight="25.0" styleClass="action-btn" text="Process / Done" textAlignment="CENTER" wrapText="true" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="2">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <GridPane.margin>
            <Insets bottom="2.0" left="2.0" right="2.0" top="5.0" />
         </GridPane.margin>
      </Button>
      <Button fx:id="resetButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="25.0" minWidth="70.0" mnemonicParsing="false" onMouseClicked="#ResetConfiguration" prefHeight="25.0" styleClass="reset-btn" text="Reset" GridPane.columnIndex="3" GridPane.rowIndex="3">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <GridPane.margin>
            <Insets bottom="5.0" left="2.0" right="2.0" top="2.0" />
         </GridPane.margin>
      </Button>
      <Button fx:id="clearButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="25.0" minWidth="70.0" mnemonicParsing="false" onMouseClicked="#clearCurrentCipher" prefHeight="25.0" styleClass="clear-btn" text="Clear" GridPane.columnIndex="2" GridPane.rowIndex="3">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <GridPane.margin>
            <Insets bottom="5.0" left="2.0" right="2.0" top="2.0" />
         </GridPane.margin>
      </Button>
      <ToggleSwitch fx:id="cipherModeTS" onMouseClicked="#setCipherMode" prefHeight="30.0" prefWidth="22.0" text="Char-By-Char Mode" GridPane.columnIndex="2" GridPane.rowIndex="1">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </ToggleSwitch>
   </children>
   <stylesheets>
      <URL value="@../../../app/app.css" />
      <URL value="@encrypt-decrypt.css" />
   </stylesheets>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</GridPane>
